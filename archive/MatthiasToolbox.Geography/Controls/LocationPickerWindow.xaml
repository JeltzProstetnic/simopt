<Window x:Class="MatthiasToolbox.Geography.Controls.LocationPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MatthiasToolbox.Geography.Controls"
        Title="Pick a position..." Height="489" Width="824"
        Loaded="LocationPickerWindow_Loaded"
        ContentRendered="LocationPickerWindow_ContentRendered"
        Closing="LocationPickerWindow_Closing"
        KeyDown="LocationPickerWindow_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="SteelBlue" Grid.ColumnSpan="5" Grid.Row="0" BorderThickness="1" CornerRadius="5" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <local:WorldTree Grid.Row="0" Grid.Column="0"  x:Name="worldTree1"></local:WorldTree>
                <GridSplitter Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  Background="#FFBCBCBC" />
                <!--<local:GMap Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" x:Name="mapPickerMap" MouseDown="mapPickerMap_MouseDown" ></local:GMap>-->
            </Grid>
        </Border>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="15,7,10,3" Text="Search:" Foreground="FireBrick" TextAlignment="Left"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Grid.ColumnSpan="2" Name="textBoxSearch" MinWidth="100"  TextChanged="textBoxSearch_TextChanged" />
        <!--<Button Grid.Row="1" Grid.Column="3" Margin="5" Name="buttonSearch" Click="buttonSearch_Click"  Content="Search">
        </Button>-->

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="15,7,10,3" Text="Name:" Foreground="FireBrick" TextAlignment="Left"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Name="textBoxEnteredName" MinWidth="100"  TextChanged="textBoxEnteredName_TextChanged" />
        <Button Grid.Row="2" Grid.Column="3" Margin="5" Name="buttonOK" Content="OK" Click="buttonOK_Click" IsEnabled="False"></Button>

    </Grid>

</Window>