<UserControl x:Class="MatthiasToolbox.OntologyEditor.Controls.PropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Metamodel="clr-namespace:MatthiasToolbox.Semantics.Metamodel;assembly=MatthiasToolbox.Semantics" 
             mc:Ignorable="d" 
             d:DesignHeight="329" d:DesignWidth="547" MinHeight="300" MinWidth="150" Margin="10" 
             Name="ucPropertyControl">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type Metamodel:Property}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}"/>
                <TextBlock> -</TextBlock>
                <TextBlock Text="{Binding DataType}"/>
            </StackPanel>
        </DataTemplate>
        <CollectionViewSource x:Key="AllowedDataTypesSource" Source="{Binding ElementName=ucPropertyControl, Path=AllowedDataTypes}" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dgProperties" ItemsSource="{Binding Properties}" AutoGenerateColumns="False" HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Property Name" Width="SizeToCells" Binding="{Binding Name}" MinWidth="200"/>
                <DataGridComboBoxColumn Header="Data Type" Width="SizeToCells" ItemsSource="{Binding Source={StaticResource AllowedDataTypesSource}}" SelectedValueBinding="{Binding DataType}" MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Name="txtName" Width="128"></TextBox>
            <Button Name="btnAdd" Click="btnAdd_Click" Margin="10,0">Add Property</Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Margin="0,10,0,5">Inherited Properties</TextBlock>
            <ListView ItemsSource="{Binding Parent.AllProperties}" MinHeight="75"/>
        </StackPanel>
    </Grid>
</UserControl>
