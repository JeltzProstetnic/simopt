<Window
  x:Class="MatthiasToolbox.WPFNotifyIcon.Tutorials.ToolTips.UserControlToolTipWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:tb="http://www.matthiasgruber.com/presentation/notifyicon"
  xmlns:local="clr-namespace:MatthiasToolbox.WPFNotifyIcon.Tutorials.ToolTips"
  Height="300"
  Width="300">
  <Grid>

    <tb:TaskbarIcon
      x:Name="MyNotifyIcon"
      IconSource="/Icons/Error.ico"
      ToolTipText="hello world">

      <!-- assign user control as ToolTip -->
      <tb:TaskbarIcon.TrayToolTip>
        <local:SimpleUserControl />
      </tb:TaskbarIcon.TrayToolTip>

    </tb:TaskbarIcon>
    <TextBlock Margin="26,26,24,0" VerticalAlignment="Top" FontWeight="Bold" TextWrapping="Wrap"><Run Text="Move mouse over NotifyIcon to show ToolTip" Language="de-ch"/></TextBlock>

  </Grid>
</Window>
