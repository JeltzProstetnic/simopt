<Window x:Class="MatthiasToolbox.SimOptExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulation Based Optimization Demo" Height="350" Width="525">
    
    <Grid>
        <TabControl Name="tabControlMain" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Name="tabItemOpt" Header="Optimization">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <RichTextBox Name="richTextBoxOpt" Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <RichTextBox.Document>
                            <FlowDocument PageWidth="1500" />
                        </RichTextBox.Document>
                    </RichTextBox>

                    <WindowsFormsHost Grid.Column="1" Name="windowsFormsHost1" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Grid.ColumnSpan="2">
                        <TextBlock>Queue Size:</TextBlock>
                        <TextBox Name="textBoxQueueSize">10</TextBox>
                        <Separator Width="8" />
                        <TextBlock>Generations:</TextBlock>
                        <TextBox Name="textBoxGenerations">100</TextBox>
                        <Separator Width="8" />
                        <Button Name="btnStartOpt" Width="80" Click="btnStartOpt_Click">Start</Button>
                    </StackPanel>
                    
                </Grid>
            </TabItem>
            <TabItem Name="tabItemSim" Header="Simulation">
                <Grid Name="MainGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <RichTextBox Name="richTextBoxLog" Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <RichTextBox.Document>
                            <FlowDocument PageWidth="1500" />
                        </RichTextBox.Document>
                    </RichTextBox>

                    <Grid Grid.Row="1" Name="ButtonGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <CheckBox Name="checkBoxLog" Grid.Column="0" Margin="15,5">Logging</CheckBox>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="4">
                            <Button Name="btnStop" Width="80" Click="btnStop_Click">Stop</Button>
                            <Button Name="btnPause" Width="80" Click="btnPause_Click">Pause</Button>
                            <Button Name="btnStart" Width="80" Click="btnStart_Click">Start</Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
    
    
</Window>
