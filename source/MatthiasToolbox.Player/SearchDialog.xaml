<Window x:Class="MatthiasToolbox.Player.SearchDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300"
             x:Name="UcSearchDialog"
             KeyDown="SearchDialog_KeyDown" KeyUp="SearchDialog_KeyUp"
        FocusManager.FocusedElement="{Binding ElementName=TxtSearch}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox Name="livFilteredSongs" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding ElementName=UcSearchDialog, Path=FilteredSongsView}" 
                  SelectedItem="{Binding ElementName=UcSearchDialog, Path=SelectedFile, Mode=OneWayToSource}"/>

        <TextBox Name="TxtSearch" Grid.Row="1" Grid.ColumnSpan="3" DockPanel.Dock="Bottom"/>
        
        <Button Name="BtnQueue" Grid.Row="2" Grid.Column="0" Click="BtnQueue_Click" HorizontalAlignment="Left">Queue Song</Button>
        <Button Grid.Row="2" Grid.Column="1" IsDefault="True" Click="OkButton_Click">Ok</Button>
        <Button Grid.Row="2" Grid.Column="2" IsCancel="True">Cancel</Button>
        
        
    </Grid>
</Window>
