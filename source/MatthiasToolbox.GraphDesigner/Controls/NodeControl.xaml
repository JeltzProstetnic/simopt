<UserControl x:Class="MatthiasToolbox.GraphDesigner.Controls.NodeControl"
             x:Name="ucNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Converters="clr-namespace:MatthiasToolbox.Presentation.Converters" mc:Ignorable="d" 
             d:DesignHeight="181" d:DesignWidth="213">
    <UserControl.Resources>
        <Converters:ColorToBrushConverter x:Key="ColorConverter"/>
        <!-- Style prevents transparent background on the node if no background was set. -->
        <Style x:Key="SpecialBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding Path=BackgroundColor, Converter={StaticResource ColorConverter}}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=BackgroundColor}" Value="{x:Null}" >
                    <Setter Property="Background" Value="LightGray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <!-- 
    TODO: GraphDesigner - dwi re-implement:
            BorderThickness="{Binding ElementName=ucNodeControl, Path=BorderThickness}"
            BorderBrush="{Binding ElementName=ucNodeControl, Path=BorderBrush}"
            CornerRadius="{Binding ElementName=ucNodeControl, Path=CornerRadius}"
    -->
    <Border Style="{StaticResource ResourceKey=SpecialBorder}"
            BorderBrush="Black" BorderThickness="1" CornerRadius="5"
            x:Name="borderMain"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            
            </Grid.ColumnDefinitions>
            <TextBlock Name="textBoxTitle" TextAlignment="Center" FontWeight="Bold" Text="{Binding Path=Name}" 
                       Foreground="{Binding Path=ForegroundColor, Converter={StaticResource ColorConverter}}"/>
            <Separator Name="spTitle" Grid.Row="1"></Separator>
            <TextBlock Name="textBoxIntro" Grid.Row="2" Background="Transparent" TextAlignment="Justify" Text="{Binding Path=Text}" />
        </Grid>
    </Border>
</UserControl>