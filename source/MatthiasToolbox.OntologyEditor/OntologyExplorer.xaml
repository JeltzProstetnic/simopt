<Window x:Class="MatthiasToolbox.OntologyEditor.OntologyExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OntologyExplorer" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="3"></Menu>
        <TabControl Grid.Column="1" Grid.Row="1">
            <TabItem Header="Search">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox Name="textBoxSearch" Grid.Row="0" Grid.ColumnSpan="2" MinWidth="200"></TextBox>
                    <Button Name="buttonSearch" Grid.Row="0" Grid.Column="2" Click="buttonSearch_Click">Search</Button>
                    <ListBox Name="listBoxResults" Grid.Row="1" Grid.ColumnSpan="3"></ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Submit">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label>Title:</Label>
                    <TextBox Name="textBoxTitle" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="1"></TextBox>
                    <TextBox Name="textBoxText" Grid.Row="1" Grid.ColumnSpan="3"></TextBox>
                    <Separator Grid.Row="2" Grid.ColumnSpan="3"></Separator>
                    <Button Name="buttonAnnotate" Grid.Row="3" Grid.Column="2" Click="buttonAnnotate_Click">Annotate</Button>
                    <!--<DataGrid Grid.Row="4" Grid.ColumnSpan="3" Name="dataGridAnnotation" AutoGenerateColumns="True" IsTextSearchEnabled="True" MinRowHeight="21" />-->
                    <ListBox Name="dataGridAnnotation" Grid.Row="4" Grid.ColumnSpan="3"></ListBox>
                    <Button Name="buttonSubmit" Grid.Row="5" Grid.Column="2" Click="buttonSubmit_Click">Submit</Button>
                </Grid>
            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3"></StatusBar>
    </Grid>
</Window>
