<UserControl x:Class="MatthiasToolbox.OntologyEditor.Controls.ConceptControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Converters="clr-namespace:MatthiasToolbox.Presentation.Converters;assembly=MatthiasToolbox.GraphDesigner" xmlns:Metamodel="clr-namespace:MatthiasToolbox.Semantics.Metamodel;assembly=MatthiasToolbox.Semantics" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Converters:ColorToBrushConverter x:Key="ColorConverter"/>
        <!-- Style prevents transparent background on the node if no background was set. -->
        <Style x:Key="SpecialBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding Path=BackgroundColor, Converter={StaticResource ColorConverter}}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=BackgroundColor}" Value="{x:Null}" >
                    <Setter Property="Background" Value="LightGray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <DataTemplate DataType="{x:Type Metamodel:Property}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text=" - " />
                <TextBlock Text="{Binding DataType}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Border Style="{StaticResource ResourceKey=SpecialBorder}"
            BorderBrush="Black" BorderThickness="1" CornerRadius="5"
            x:Name="borderMain"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>
            <TextBlock Name="textBoxTitle" TextAlignment="Center" FontWeight="Bold" Text="{Binding Path=Name, PresentationTraceSources.TraceLevel=High}" 
                       Foreground="{Binding Path=ForegroundColor, Converter={StaticResource ColorConverter}}"/>
            <Separator Name="spTitle" Grid.Row="1"></Separator>
            <ListView Grid.Row="2" ItemsSource="{Binding AllProperties}" Background="Transparent" BorderThickness="0">
            </ListView>
        </Grid>
    </Border>
</UserControl>
