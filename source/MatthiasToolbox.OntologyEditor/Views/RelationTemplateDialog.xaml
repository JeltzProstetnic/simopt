<Window x:Class="MatthiasToolbox.OntologyEditor.Views.RelationTemplateDialog"
        Name="relationTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Controls="clr-namespace:MatthiasToolbox.OntologyEditor.Controls" Height="500" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="10">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
                <Button Name="btnTemplateAdd" Height="25" Width="70" Click="btnTemplateAdd_Click" Margin="5">Add</Button>
                <Button Name="btnTemplateRemove" Height="25" Width="70" Click="btnTemplateRemove_Click">Remove</Button>
            </StackPanel>
            <ListBox Name="lbTemplates" ItemsSource="{Binding ElementName=relationTemplateDialog, Path=RelationTemplates}" SelectionMode="Single" VerticalAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <Controls:RelationTemplateControl Grid.Column="1" DataContext="{Binding ElementName=lbTemplates, Path=SelectedItem}"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Name="btnOk" Height="25" Width="70" Click="btnOk_Click" IsDefault="True" Margin="5">Ok</Button>
            <Button Name="btnCancel" Height="25" Width="70" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
