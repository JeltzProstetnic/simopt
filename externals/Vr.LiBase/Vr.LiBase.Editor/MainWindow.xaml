                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding Mode=TwoWay, ElementName=graphControlMain, Path=Panel.ContentScale, Converter={StaticResource scaleToPercentConverter}}" />
                <TextBlock VerticalAlignment="Center" Text="%" />
