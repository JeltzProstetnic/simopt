                    <Image Source="/MatthiasToolbox.Presentation;component/Resources/zoomfill.png"></Image>
                </Button>
                <Button Name="button100"  Click="button100_Click" ToolTip="Reset zoom to 100%">
                    <Image Source="/MatthiasToolbox.Presentation;component/Resources/zoomoff.png"></Image>
